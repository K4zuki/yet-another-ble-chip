{
    "plugins": [
        "gitbook-plugin-autocover",
        "addcssjs"
    ],
    "pluginsConfig": {
        "theme": {"sepia", "night" or "white",
            "family": "serif" or "sans",
            "size": 1 to 4},
        "addcssjs": {
            "js": ["js/custom.js"],
            "css": ["css/custom.css"]
        },
        "gitbook-plugin-autocover" : {
            "title": "My Book",
            "author": "Author",
            "font": {
                "size": null,
                "family": "Impact",
                "color": "#FFF"
            },
            "size": {
                "w": 1800,
                "h": 2360
            },
            "background": {
                "color": "#09F"
            }
        }
    }
}
